<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="match_parent"
      android:layout_height="214dp"
      app:srcCompat="@drawable/grass_leaf" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:lineSpacingExtra="20sp"
      android:text="Adori Express"
      android:textAlignment="center"
      android:textColor="#D01818"
      android:textSize="24sp"
      android:textStyle="bold" />
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="First BMI App"
      android:textStyle="bold"
      android:textAlignment="center"
      android:textSize="20dp"
      android:textColor="#4CA6EF"
      android:layout_marginTop="20dp"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Insert Height Feet"
      android:textSize="17dp"
      android:layout_marginStart="30dp"
      android:layout_marginTop="20dp"
      android:textColor="#7381B8"
      android:textStyle="bold"/>
  <EditText
      android:id="@+id/txt_height_ft"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:hint="@string/txt_height_ft"
      android:layout_marginStart="30dp"
      android:textStyle="bold"
      android:ems="10"
      android:text="5"
      android:height="48sp"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Isert Height Inch"
      android:textSize="17dp"
      android:layout_marginStart="30dp"
      android:layout_marginTop="5dp"
      android:textColor="#7381B8"
      android:textStyle="bold"/>
  <EditText
      android:id="@+id/txt_height_inch"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:hint="@string/txt_height_inch"
      android:layout_marginStart="30dp"
      android:textStyle="bold"
      android:ems="10"
      android:text="6"
      android:height="48sp"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Insert Weight"
      android:textSize="17dp"
      android:layout_marginStart="30dp"
      android:layout_marginTop="5dp"
      android:textColor="#7381B8"
      android:textStyle="bold"/>
  <EditText
      android:id="@+id/txt_weight"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:hint="@string/txt_weight"
      android:layout_marginStart="30dp"
      android:textStyle="bold"
      android:ems="10"
      android:text="72"
      android:height="48sp"/>
  <Button
      android:id="@+id/calc_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Calculate BMI"
      android:layout_marginStart="50dp"
      android:layout_marginTop="5dp"/>
  <TextView
      android:id="@+id/txt_result"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="30sp"
      android:layout_marginTop="10sp"
      android:textSize="30sp"
      android:textStyle="bold"
      android:textColor="#0000FF"/>

</LinearLayout>